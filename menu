function Select_Display() {
echo
read -p "Select From option [1/11 or x] :  " hallo
case $hallo in
1) clear ; m-ssh ;; # menu ssh
2) clear ; m-xray ;; # menu vmess
3) clear ; m-tro ;; # menu trojan
4) clear ; sd ;; # menu slowdns
5) clear ; m-ssr ;; # menu sadowsocks
6) clear ; m-noobz ;; # menu noobzvps
7) clear ; m-bot ;; # menu bot telegram
8) clear ; wget -q https://raw.githubusercontent.com/awanklod/os/main/menu/update.sh && chmod +x update.sh && ./update.sh ;; #Update script
9) clear ; m-bkp ;; # menu backup
10) clear ; m-ftr ;; # menu managers
11) clear ; reboot ;; # rebot
*) welcome ;; # Back To Home Welcome
esac
}

clear && printf '\033[3J'
