function Select_Menu() {
read -p "Select From Options [1-22 or x] :  " NB
case $NB in
1) clear ; run ;;
2) clear ; reset ;;
3) clear ; autoreboot ;;
4) clear ; gotop ;;
5) clear ; speedtest ;;
6) clear ; xp ;;
7) clear ; Factreset ;;
8) clear ; add-ip ;;
9) clear ; cf ;;
10) clear ; wget -q https://raw.githubusercontent.com/pianstore/os/slowdns/installsl.sh && chmod +x installsl.sh && ./installsl.sh && reset ;;
11) clear ; nano /etc/issue.net ;;
12) clear ; change-domain ;;
13) clear ; fixhap ;;
14) clear ; fixcert ;;
15) clear ; fixakunbot ;;
16) clear ; clearcache ;;
17) clear ; clearlog ;;
18) clear ; delet-cache-file ;;
19) clear ; Info_Port ;;
20) clear ; about ;;
21) clear ; limit-on-off ;;
22) clear ; menu ;;
23) clear ; UDEPE ;;
x) exit ;;
*) m-ftr ;;
esac
}


Banner
Menu_Lambofgod
Select_Menu